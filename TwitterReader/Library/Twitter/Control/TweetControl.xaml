<UserControl x:Class="Twitter.Control.TweetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85px" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Width="75px" VerticalAlignment="Top" Grid.Column="0" Grid.RowSpan="3" Margin="5px">
            <Image.Source>
                <BitmapImage UriSource="https://pbs.twimg.com/profile_images/1055948730095071237/8d-e8-LS_400x400.jpg"/>
            </Image.Source>
        </Image>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0">
            <TextBlock Text="shidenvip" Margin="5" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <TextBlock Text="@shidenvip" Margin="5" Foreground="#8899a6" FontSize="14" VerticalAlignment="Center"/>
            <TextBlock Text="3時間" Margin="5" Foreground="#8899a6" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="15" TextWrapping="Wrap" Margin="5px" Text="ゲーム開発やりたいなと思ったが、アニメーションがホントに難しいからどうしよう。3Dモデリングも時間かなりかかるし&#xa;ゲーム開発、要素多過ぎなんだよなぁ"/>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="B" Grid.Column="0" Width="20px" Margin="3" HorizontalAlignment="Left" FontSize="14" Foreground="#8899a6"/>
            <Button Content="B" Grid.Column="1" Width="20px" Margin="3" HorizontalAlignment="Left" FontSize="14" Foreground="#8899a6"/>
            <Button Content="B" Grid.Column="2" Width="20px" Margin="3" HorizontalAlignment="Left" FontSize="14" Foreground="#8899a6"/>

        </Grid>
    </Grid>

</UserControl>
